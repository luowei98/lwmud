@import 'globe'

html
    background: url('/img/background.jpg') no-repeat center center fixed
    -webkit-background-size: cover
    -moz-background-size: cover
    -o-background-size: cover
    background-size: cover

body
    color: #000

#login-box
    width: 600px
    height: 300px
    margin-left: 16%
    margin-top: 10%

div#tickets
    h3.title
        font-family Consolas, "隶书", "宋体", Helvetica
        font-size: 72px
        margin-bottom: 0

    p
        margin-left: 2em
        margin-bottom: 20px

    li
        margin: 16px 0

        button#login-button
            margin-left: 24px
            font-size: 16px
            width: 120px
            height: 40px
            background-color: rgba(0, 0, 0, 0.7)
            margin-top: 16px
            color: #ddd

    input[type='text'],
    input[type='password']
        border: 1px solid transparent
        border-bottom: 1px solid #999
        color: #000
        padding: 2px 0.6em 0
        font-size: 1.15em
        font-family "微软雅黑", "宋体", Helvetica


    input[type='text']:hover,
    input[type='text']:focus,
    input[type='password']:hover
    input[type='password']:focus
        border: 1px solid transparent
        border-bottom: 1px solid #666

    label.username
        background: url('/img/user.png') no-repeat 0 0
        display: inline-block
        width: 24px
        height: 24px

    label.password
        background: url('/img/password.png') no-repeat 0 0
        display: inline-block
        width: 24px
        height: 24px

    button.loading
        background: url('/img/button-loading.gif') no-repeat 56px 17px
        padding-left: 20px
        text-align: left