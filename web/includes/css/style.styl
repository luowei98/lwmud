fcolor = #ccc
bcolor = #0e0e0e
scrollbar-fcolor = #111
scrollbar-bcolor = #333
placeholder-fcolor = #666
link-fcolor = #008886
hover-fcolor = #00aba9
border-fcolor = #222
input-fcolor = #ddd
required-fcolor = #f90
entry-fcolor = #88c

html
  display block
  height 100%
  width 100%

.def-block, h1, h2, h3, h4, h5, h6, hr, div, p, blockquote, dl, dt, dd, ul, ol, li, pre, form, fieldset, legend, button, textarea, th, td, img
  background transparent
  border medium none
  outline none
  vertical-align baseline

.def-font-color, button, input, select, textarea, h1, h2, h3, h4, h5
  font-family Consolas, "微软雅黑", "宋体", Arial, Helvetica, sans-serif
  font-weight normal
  color fcolor

body
  @extend .def-block
  @extend .def-font-color
  
  background-color bcolor
  
  margin 0
  padding 0

  // Internet Explorer
  scrollbar-arrow-color scrollbar-fcolor
  scrollbar-face-color scrollbar-bcolor
  scrollbar-darkshadow-color scrollbar-fcolor
  scrollbar-highlight-color scrollbar-fcolor
  scrollbar-3dlight-color scrollbar-fcolor
  scrollbar-shadow-color scrollbar-fcolor
  scrollbar-track-color scrollbar-fcolor


::-webkit-scrollbar // WebKit browsers
    width 8px

::-webkit-scrollbar-thumb // WebKit browsers
  background scrollbar-bcolor

::-webkit-input-placeholder, // WebKit browsers
:-moz-placeholder, // Mozilla Firefox 4 to 18
::-moz-placeholder, // Mozilla Firefox 19+
:-ms-input-placeholder // Internet Explorer 10+
  color placeholder-fcolor

body, button, input, select, textarea
  font-size 14px

ul, ol
  list-style none

a
  color link-fcolor
  text-decoration none
  :hover
    color hover-fcolor
      img
        opacity 0.8

fieldset
  border none


input[type="text"],
input[type="password"],
textarea
  border-color border-fcolor
  background-color bcolor
  color input-fcolor
  padding 2px 0.3em
  height 2.12em
  line-height 1.6em


#vertical
  height 100%
  width 100%
  margin 0 auto

.pane-content,
.input-pane-content
  margin 5px
  padding 0 5px

.input-pane-content
  height 30px

input#entry
  width 100%
  height 100%
  background-color bcolor
  border-width 0
  outline-width 0
  clear both
  font-size 1.2em
  color input-fcolor

.message
  font-size 14px
  line-height 1.3em
  padding 0 6px
  h4, p, ul
    margin 8px 0
  h4
    color input-fcolor
  p
    text-indent 2em
  ul
    padding-left 2em
  .exit
    color link-fcolor


#scroll-pane
  overflow auto

.k-textbox
  width 11.8em

#login-window
  margin 0
  padding 0

#tickets
  width 420px
  height 287px
  margin 0
  padding 2px 30px 10px 150px
  background url('/img/login.png') transparent no-repeat 0 0
  h3
    border-bottom 1px solid #666
    font-size 1.2em
    padding 6px
  ul
    list-style-type none
    margin 0
    padding 0
  li
    margin 10px 0 0 0

label
  display inline-block
  width 90px
  text-align right

.required
  color required-fcolor

.accept
  padding-left 90px

span.k-tooltip
  margin-left 6px

.self-entry
  color entry-fcolor = #88c

.side-panelbar li ul li
  text-indent 1em

.accept, .status
  padding-left: 90px;

.valid
  color: green;

.invalid
  color: red;
