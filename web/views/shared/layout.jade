html
    head
        title= title

        meta(charset='utf-8')

        link(rel='stylesheet', href='/css/style.css')
        script(src='/js/jquery-1.8.2.min.js')

        link(rel='stylesheet', href='/kendo/css/kendo.common.min.css')
